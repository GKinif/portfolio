<h1>Show User</h1>

<ul>

    <li>
        <strong>Username:</strong>
        <%= @user.username %>
    </li>

    <li>
        <strong>Email:</strong>
        <%= @user.email %>
    </li>

    <li>
        <strong>Picture:</strong>
        <img src="<%= @user.picture %>" class="h-8 w-8 rounded-full" />
    </li>

</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
